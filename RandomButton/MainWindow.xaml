            x:Name="btn2" 
            MouseRightButtonDown="Button_MouseRightButtonDown"
            Content="Button2"
            FontSize="20"
            HorizontalAlignment="Center"
            Margin="0,37,0,0" 
            VerticalAlignment="Top" 
            Height="72"                 
            Width="112" RenderTransformOrigin="0.5,0.5" Click="Button_Click_1"/>
        <Button 
            x:Name="btn3" 
            MouseRightButtonDown="Button_MouseRightButtonDown"
            Content="Button3"
            FontSize="20"
