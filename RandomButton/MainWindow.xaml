        <Button             
                x:Name="btn1"
                MouseRightButtonDown="Button_MouseRightButtonDown"
                Content="Button1"                
                Click="Button_Click"
                FontSize="20"
                HorizontalAlignment="Left"
                Margin="44,37,0,0" 
                VerticalAlignment="Top" 
                Height="72"                 
                Width="111" RenderTransformOrigin="0.5,0.5"/>
