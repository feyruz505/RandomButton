            Margin="622,37,0,0" 
            VerticalAlignment="Top" 
            Height="72"                 
            Width="112" RenderTransformOrigin="0.5,0.5" Click="Button_Click_2"/>
        <Button 
            x:Name="btn4" 
            MouseRightButtonDown="Button_MouseRightButtonDown"
            Content="Button4"
            FontSize="20"
            HorizontalAlignment="Left"
            Margin="44,259,0,0" 
            VerticalAlignment="Top" 
            Height="72"                 
            Width="111" RenderTransformOrigin="1.558,0.431" Click="Button_Click_3"/>
        <Button 
            x:Name="btn5" 
            MouseRightButtonDown="Button_MouseRightButtonDown"
            Content="Button5"
            FontSize="20"
            HorizontalAlignment="Center"
            Margin="0,259,0,0" 
            VerticalAlignment="Top" 
            Height="72"                 
            Width="112" RenderTransformOrigin="1.558,0.431" Click="Button_Click_4"/>
        <Button 
            MouseRightButtonDown="Button_MouseRightButtonDown"
            x:Name="btn6" 
            Content="Button6"
            FontSize="20"
            HorizontalAlignment="Left"
            Margin="623,259,0,0" 
            VerticalAlignment="Top" 
            Height="72"                 
            Width="111" RenderTransformOrigin="1.558,0.431" Click="Button_Click_5"/>

    </Grid>
</Window>
